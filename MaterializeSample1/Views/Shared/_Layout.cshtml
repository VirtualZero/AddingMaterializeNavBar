<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MaterializeSample1</title>

    <!--Implementing Materialize CSS-->
    <environment include="Development">
        <link rel="stylesheet" href="~/css/materialize.css"  />
        <link href="https://fonts.googleapis.com/icon?family=Materialize+Icons" rel="stylesheet" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/materialize.css" />
        <link href="https://fonts.googleapis.com/icon?family=Materialize+Icons" rel="stylesheet" />
    </environment>
</head>


    <!--Our Navigation Bar Will Go Here-->
<body class="green lighten-4">
    <nav class="blue-grey lighten-4">
        <div class="nav-wrapper">
            <a href="#" class="brand-logo left white-text" style="font-family:Arial;"<span class="flow-text">Materialize Tutorial</span></a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li><a asp-area="" asp-controller="home" asp-action="index">Home</a></li>
                <li><a asp-area="" asp-controller="home" asp-action="about">About</a></li>
                <li><a asp-area="" asp-controller="home" asp-action="contact">Contact</a></li>
            </ul>
        </div>
    </nav>



    <!--RenderBody determines where the <body> of all files that share this layout will be imported-->
    @RenderBody()

    <!--Implementing JavaScript-->

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/js/materialize.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/js/materialize.js"></script>
    </environment>

    @RenderSection("Scripts", required: false)

</body>
</html>
